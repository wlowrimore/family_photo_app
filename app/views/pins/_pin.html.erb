<div id="<%= dom_id pin %>">
  <p class="flex">
    <strong class="flex font-medium text-lg mr-4 italic">Title:</strong>
    <p class="text-3xl tracking-wider text-[#efe565]] underline mb-4"><%= pin.title %></p>
  </p>

  <div class="border-2 rounded-xl border-gray-600 p-6 mb-16">
    <%= pin.body %> 
   

    <br />
    <div class="w-fill py-5 border-2 rounded-xl shadow-md shadow-gray-300 flex justify-center">
      <% if pin.image.content_type.in?(%w[image/jpeg image/png]) %>
        <%= link_to image_tag(pin.image_as_thumbnail), pin.image if pin.image.attached? %>
      <% end %>
    </div>
    <br />
    <hr />
    <br />

    <div class="grid grid-cols-6 gap-8">
      <% pin.pictures.each do |picture| %> 
      <div class="w-fill border-2 rounded-xl shadow-lg shadow-gray-400 flex justify-center">
        <%= link_to image_tag(pin.picture_as_thumbnail(picture)), picture %>
      </div>
      <% end %>
    </div>
  </div>
</div>